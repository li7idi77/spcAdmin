<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
       <Property name="FILE_LOG_PATTERN">%d{yyyy-MM-dd_HH:mm:ss.SSS} %level [%thread] [%logger:%line] ::: %msg%n</Property>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %5p [%c] %m%n" />
        </Console>
        <File name="file" fileName="C:/apache-tomcat-7.0.99/webapps/logs/lms/lms.log" append="false">
   			<PatternLayout pattern="%d %5p [%c] %m%n"/>
  		</File>
       <RollingFile name="LogToFile">
	      <FileName>C:/apache-tomcat-7.0.99/webapps/logs/lms/daily/lmsRolling.log</FileName>
	      <FilePattern>C:/apache-tomcat-7.0.99/webapps/logs/time-based-logs/%d{yyyy-MM-dd-hh-mm}.log.zip</FilePattern>
	      <PatternLayout>
	        <Pattern>%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n</Pattern>
	      </PatternLayout>
	      <Policies>
	        <TimeBasedTriggeringPolicy interval="2" modulate="true" />
	      </Policies>
	      <DefaultRolloverStrategy max="5" />
	    </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="java.sql" level="DEBUG" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="LogToFile"/>
        </Logger>
        <Logger name="egovframework" level="DEBUG" additivity="false">
            <AppenderRef ref="console" />
               <AppenderRef ref="LogToFile"/>
        </Logger>
		  <!-- log SQL with timing information, post execution -->
	    <Logger name="jdbc.sqltiming" level="DEBUG" additivity="false">
	        <AppenderRef ref="console" />
	        <AppenderRef ref="LogToFile"/>
	    </Logger>
	    <Logger name="org.springframework" level="DEBUG" additivity="false">
	        <AppenderRef ref="console" />
	        <AppenderRef ref="LogToFile"/>
	    </Logger>
	    <Logger name="com.easycompany" level="DEBUG" additivity="false">
	        <AppenderRef ref="console" />
	        <AppenderRef ref="file"/>
	        <AppenderRef ref="LogToFile"/>
	    </Logger>
        <Root level="DEBUG">
            <AppenderRef ref="console" />
        </Root>
    </Loggers>
</Configuration>
